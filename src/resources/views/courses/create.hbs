<div class="mt-4">
  <div class="mt-4">
    <h3>Create a new instance of course</h3>
    <form method="post" action="/courses/store">
      <div class="mb-3">
        <label for="name" class="form-label">Name of course</label>
        <input type="text" class="form-control" id="name" name="name">
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Description of course</label>
        <input type="text" class="form-control" id="description" name="description">
      </div>
      <div class="mb-3">
        <label for="videoId" class="form-label">Video ID</label>
        <input type="text" class="form-control" id="videoId" name="videoId">
      </div>
      <button type="submit" class="btn btn-primary">Add this course</button>
    </form>
  </div>
</div>