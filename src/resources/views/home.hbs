<div class='mt-4'>
	<div class='row'>
		{{#each courses}}
		<div class='col-sm-6 col-lg-4'>
			<div class='card card-item course'>
				<a href='/courses/{{this.slug}}'>
					<img src='{{this.image}}' class='card-img-top course__img' alt='...' />
				</a>
				<div class='card-body course__body'>
					<a href='/courses/{{this.slug}}'>
						<h5 class='card-title course__body-name'>{{this.name}}</h5>
					</a>
					<p class='card-text course__body-des'>{{this.description}}</p>
					<a href='#' class='btn btn-primary course__body-btn'>Buy this course</a>
				</div>
			</div>
		</div>
		{{/each}}
	</div>
</div>